<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Fragmentos.F_Salir">

    <!-- Contenedor centralizado para el mensaje y el botón -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">

        <!-- Mensaje de Confirmación -->
        <TextView
            android:id="@+id/text_confirmacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Estás seguro que quieres salir?"
            android:textSize="18sp"
            android:textColor="#333"
            android:layout_marginBottom="24dp"/>

        <!-- Botón para salir y regresar a MainActivity -->
        <Button
            android:id="@+id/button_salir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salir"
            android:textSize="16sp"
            android:padding="16dp"
            android:background="@color/colorAccent"
            android:textColor="#fff"/>
    </LinearLayout>

</RelativeLayout>
